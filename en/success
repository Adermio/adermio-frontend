    <script>
        lucide.createIcons();

        // Menu Logic
        const menuBtn = document.getElementById('menu-btn');
        const menuOverlay = document.getElementById('full-menu');
        const menuLinks = document.querySelectorAll('.menu-link');
        let isMenuOpen = false;

        function toggleMenu() {
            isMenuOpen = !isMenuOpen;
            if (isMenuOpen) {
                menuOverlay.classList.add('menu-active');
                menuBtn.innerHTML = '<i data-lucide="x" class="w-6 h-6"></i>';
                menuBtn.classList.add('text-teal-900');
            } else {
                menuOverlay.classList.remove('menu-active');
                menuBtn.innerHTML = '<i data-lucide="menu" class="w-6 h-6"></i>';
                menuBtn.classList.remove('text-teal-900');
            }
            lucide.createIcons();
        }

        menuBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            toggleMenu();
        });

        menuLinks.forEach(link => {
            link.addEventListener('click', () => {
                if(isMenuOpen) toggleMenu();
            });
        });
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
       
          // 1. GET JOB ID
          const params = new URLSearchParams(window.location.search);
          const jobId = params.get("jobId") || params.get("client_reference_id");
       
          if (!jobId) {
              document.getElementById("status-subtitle").innerText = "Error: Order not found.";
              document.getElementById("status-subtitle").style.color = "#ef4444";
              return; 
          }
       
          // --- CONFIGURATION ---
          const POLL_URL = "https://n8n.adermio.com/webhook/aae2ff2f-cd35-48d0-b0d2-f56d2341452a?jobId="; 
          
          // 1. Normal Load Time: 90 seconds
          const MAIN_LOAD_TIME = 90 * 1000; 
          
          // 2. Extension Time: 30 seconds
          const EXTENSION_TIME = 30 * 1000;

          // 3. Final Buffer: 15 seconds
          const EXTRA_BUFFER_TIME = 15 * 1000;

          const POLL_INTERVAL = 3000; 
          
          const loadingSteps = [
              { pct: 0,  text: "Secure connection to server..." },
              { pct: 20, text: "High definition image processing..." },
              { pct: 40, text: "Analyzing imperfections and texture..." },
              { pct: 60, text: "Generating bespoke protocol..." },
              { pct: 85, text: "Building interface..." },
              { pct: 95, text: "Finalizing report..." }
          ];
       
          const startTime = Date.now();
          const progressCircle = document.getElementById("progress-circle");
          const progressText   = document.getElementById("progress-text");
          const circumference  = 2 * Math.PI * 45; 
          
          const loadingContent = document.getElementById("loading-content");
          const successState   = document.getElementById("success-state");
          const accessBtn      = document.getElementById("access-btn");
          const subtitle       = document.getElementById("status-subtitle");
          const trustGrid      = document.getElementById("trust-grid");

          // Elements for extension and timeout
          const extensionBarWrapper = document.getElementById("extension-bar-wrapper");
          const extensionBarFill    = document.getElementById("extension-bar-fill");
          const timeoutModal        = document.getElementById("timeout-modal");
       
          let progressInterval;
          let pollingInterval;
          let isSuccess = false;
          let isExtendedPhase = false;
          let hasTriggeredTimeout = false;
       
          // A. Visual Animation (0 -> 60s)
          function animateProgress() {
            progressInterval = setInterval(() => {
              const elapsed  = Date.now() - startTime;
              
              // Base progress on MAIN_LOAD_TIME (60s)
              // Block at 99%
              const progress = Math.min((elapsed / MAIN_LOAD_TIME) * 100, 99);
              
              if (isSuccess) return;
       
              // UI CIRCLE UPDATE
              const offset   = circumference - (progress / 100) * circumference;
              if(progressCircle) progressCircle.style.strokeDashoffset = offset.toFixed(2);
              if(progressText) progressText.textContent = Math.floor(progress) + "%";
       
              // UI TEXT UPDATE
              const currentStep = loadingSteps.slice().reverse().find(step => progress >= step.pct);
              if (currentStep && subtitle && subtitle.innerText !== currentStep.text && !isExtendedPhase) {
                    subtitle.style.opacity = 0; 
                    setTimeout(() => {
                        if(!isExtendedPhase) subtitle.innerText = currentStep.text;
                        subtitle.style.opacity = 1;
                    }, 300);
              }

              // END OF CIRCLE (60s) -> TRIGGER EXTENSION BAR
              if (elapsed >= MAIN_LOAD_TIME && !isSuccess && !isExtendedPhase) {
                  startExtensionPhase();
              }

            }, 100);
          }

          // B. Extension Phase (Horizontal Bar - 30 seconds)
          function startExtensionPhase() {
              isExtendedPhase = true;
              clearInterval(progressInterval); // Stop circle at 99%

              // Update Text for extension
              subtitle.style.opacity = 0;
              setTimeout(() => {
                  subtitle.innerText = "Traffic is heavier than expected: finalization in progress...";
                  subtitle.style.color = "#d97706"; // Gold color
                  subtitle.style.opacity = 1;
              }, 300);

              // Show and animate extension bar
              extensionBarWrapper.style.display = "block";
              setTimeout(() => {
                  extensionBarWrapper.style.opacity = 1;
                  extensionBarFill.style.width = "100%"; // Triggers 30s CSS transition
              }, 100);

              // When bar is full (30s later), trigger final buffer
              setTimeout(() => {
                  if (!isSuccess && !hasTriggeredTimeout) {
                      startFinalBufferPhase();
                  }
              }, EXTENSION_TIME);
          }

          // C. Final Buffer (Extra 15s "just in case")
          function startFinalBufferPhase() {
              // No UI change, just keep polling for 15s more
              // Total elapsed here: 60s + 30s = 1m30s
              
              setTimeout(() => {
                  if (!isSuccess && !hasTriggeredTimeout) {
                      showTimeoutPopup(); // Stop polling happens here
                  }
              }, EXTRA_BUFFER_TIME);
          }

          // D. Show Timeout Popup & STOP POLLING
          function showTimeoutPopup() {
              hasTriggeredTimeout = true;
              stopPolling(); // <--- CRITICAL STOP
              timeoutModal.classList.add('active');
          }
       
          // E. Polling
          async function checkStatus() {
            try {
              if (isSuccess) return;

              const res = await fetch(POLL_URL + encodeURIComponent(jobId), { method: "GET", cache: "no-store" });
              const data = await res.json();
              if (!data) return;
              
              const record = Array.isArray(data) ? data[0] : data;
       
              // "ROBUST" Condition
              if (record && record.downloadUrl && record.downloadUrl.length > 10) {
                isSuccess = true;
                stopPolling();
                showSuccess(record.downloadUrl);
              }
            } catch (e) { console.error("Polling...", e); }
          }
       
          // F. Success
          function showSuccess(url) {
              // Close timeout modal if open
              if(timeoutModal.classList.contains('active')) {
                  timeoutModal.classList.remove('active');
              }

              if(progressText) progressText.textContent = "100%";
              if(progressCircle) {
                  progressCircle.style.strokeDashoffset = 0;
                  progressCircle.style.stroke = "#16a34a"; // Success Green
              }

              // Hide extension bar if active
              if(isExtendedPhase) {
                   extensionBarWrapper.style.opacity = 0;
              }
       
              setTimeout(() => {
                  loadingContent.style.opacity = 0;
                  loadingContent.style.transition = "opacity 0.5s ease";
                  
                  setTimeout(() => {
                      loadingContent.style.display = "none";
                      accessBtn.href = url;
                      
                      successState.style.display = "block";
                      setTimeout(() => {
                          successState.style.opacity = 1;
                          successState.style.transform = "translateY(0)";
                      }, 50);

                      if(trustGrid) trustGrid.style.opacity = 0.6;
                  }, 500);
              }, 600);
          }
       
          function stopPolling() {
            clearInterval(pollingInterval);
            clearInterval(progressInterval);
          }
       
          // Start
          animateProgress();
          setTimeout(() => {
            checkStatus(); 
            pollingInterval = setInterval(() => checkStatus(), POLL_INTERVAL);
          }, 2500);
       
          window.addEventListener('beforeunload', () => stopPolling());
        });
      </script>
</body>
</html>
